<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TownHall.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TownHall"
    Title="TownHall">

	<TabBar>
		<ShellContent Title="Messages"
                      ContentTemplate="{DataTemplate local:Messages}" />
		<ShellContent Title="Buy"
                      ContentTemplate="{DataTemplate local:Buy}" />
		<ShellContent Title="Sell"
                      ContentTemplate="{DataTemplate local:Sell}" />
		<ShellContent Title="Account"
                      ContentTemplate="{DataTemplate local:Account}" />
	</TabBar>

</Shell>
