<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TownHall.Login">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Login Form Container -->
            <Frame Grid.Row="1" 
                   Padding="30"
                   Margin="20,0">

                <VerticalStackLayout Spacing="25">

                    <!-- App Logo/Title -->
                    <VerticalStackLayout Spacing="10">
                        <Label Text="TownHall"
                               Style="{StaticResource Headline}" />
                        <Label Text="Welcome back!"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>

                    <!-- Email Input -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email"
                               FontSize="14"
                               FontAttributes="Bold" />
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                                StrokeShape="RoundRectangle 8"
                                Padding="12,0">
                            <Entry x:Name="EmailEntry"
                                   Placeholder="Enter your email"
                                   Keyboard="Email"
                                   BackgroundColor="Transparent" />
                        </Border>
                        <Label x:Name="EmailErrorLabel"
                               Text=""
                               TextColor="{StaticResource Magenta}"
                               FontSize="12"
                               IsVisible="False" />
                    </VerticalStackLayout>

                    <!-- Password Input -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password"
                               FontSize="14"
                               FontAttributes="Bold" />
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}"
                                StrokeShape="RoundRectangle 8"
                                Padding="12,0">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Enter your password"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   Completed="OnLoginClicked" />
                        </Border>
                        <Label x:Name="PasswordErrorLabel"
                               Text=""
                               TextColor="{StaticResource Magenta}"
                               FontSize="12"
                               IsVisible="False" />
                    </VerticalStackLayout>

                    <!-- Remember Me & Forgot Password -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <CheckBox x:Name="RememberMeCheckBox" />
                            <Label Text="Remember me"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                                   FontSize="14"
                                   VerticalOptions="Center" />
                        </StackLayout>

                        <Button Grid.Column="1"
                                x:Name="ForgotPasswordButton"
                                Text="Forgot Password?"
                                BackgroundColor="Transparent"
                                FontSize="14"
                                HorizontalOptions="End"
                                TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"
                                Clicked="OnForgotPasswordClicked" />

                    </Grid>

                    <!-- Login Button -->
                    <Button x:Name="LoginButton"
                            Text="Login"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="25"
                            Clicked="OnLoginClicked" />

                    <!-- Loading Indicator -->
                    <ActivityIndicator x:Name="LoadingIndicator"
                                       IsVisible="False"
                                       IsRunning="False"
                                       HeightRequest="30" />

                    <!-- Sign Up Link -->
                    <Label HorizontalOptions="Center"
                           Margin="0,20,0,0"
                           FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSignUpClicked" />
                        </Label.GestureRecognizers>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Don't have an account? "
                                      TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                                <Span Text="Sign Up"
                                      TextColor="{StaticResource Primary}"
                                      FontAttributes="Bold" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>